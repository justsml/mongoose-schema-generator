{
  "compilerOptions": {
    "strict": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "es2018",
      "dom"
    ],
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*.js",
    "src/**/*.ts"
  ]
}
