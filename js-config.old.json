{
  "compilerOptions": {
    "jsx": "react",
    "checkJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "esnext",
    "esModuleInterop": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "allowSyntheticDefaultImports": true
  },

  "typeAcquisition": {
    "include": [
      "browser",
      "jest"
    ]
  }
}